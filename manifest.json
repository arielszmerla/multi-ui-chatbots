{
  "manifest_version": 3,
  "name": "LLM Comparator",
  "version": "1.0",
  "description": "Send prompts to ChatGPT, Claude, and AskMe directly via their open tabs with local WebLLM support",
  "permissions": [
    "tabs",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://askme.mobileye.com/*",
    "https://api.openai.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'unsafe-eval'; object-src 'self'"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://askme.mobileye.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}